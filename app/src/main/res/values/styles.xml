    <style name="AppThemeCrop" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_medium</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@fonts/font_regular</item>
    </style>

    <style name="CalendarWidgetDate">
        <item name="android:fontFamily">@fonts/font_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="CalendarWeekDay">
        <item name="android:fontFamily">@fonts/font_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lightGrey_45op</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="textFontFamilyRegular" parent="android:Widget">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="InputLayoutStyle" parent="@android:style/TextAppearance">

        <item name="android:textColor">@color/fontColorBlack50</item>
        <item name="android:colorError" tools:targetApi="o">@color/red</item>

    </style>


</resources>
