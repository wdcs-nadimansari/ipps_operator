<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/main_layout_padding"
    tools:context=".activity.SignUpActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/progressBar"
            layout="@layout/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!--   <ScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:scrollbars="none">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="@string/str_new_register"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_header" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/lato_medium"
                android:text="@string/str_register_info"
                android:textColor="@color/fontColorBlack50"
                android:textSize="@dimen/text_medium" />


            <com.webclues.IPPSOperator.view.MaterialEditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:digits="@string/partName"
                android:ellipsize="end"
                android:hint="@string/first_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_textColorHint="@color/fontColorBlack50"
                app:met_typeface="@string/font_medium" />

            <com.webclues.IPPSOperator.view.MaterialEditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:digits="@string/partName"
                android:ellipsize="end"
                android:hint="@string/last_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_textColorHint="@color/fontColorBlack50"
                app:met_typeface="@string/font_medium" />

            <com.webclues.IPPSOperator.view.MaterialEditText
                android:id="@+id/edtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_textColorHint="@color/fontColorBlack50"
                app:met_typeface="@string/font_medium" />

            <com.webclues.IPPSOperator.view.MaterialEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:hint="@string/phone"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/fontColorBlack"
                android:textSize="@dimen/text_medium"
                app:met_errorColor="@color/red"
                app:met_floatingLabel="normal"
                app:met_floatingLabelTextColor="@color/fontColorBlack50"
                app:met_textColorHint="@color/fontColorBlack50"
                app:met_typeface="@string/font_medium" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.webclues.IPPSOperator.view.MaterialAutoCompleteTextView
                    android:id="@+id/edtPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:focusableInTouchMode="false"
                    android:hint="@string/position"
                    android:inputType="none"
                    android:textColor="@color/fontColorBlack"
                    android:textSize="@dimen/text_medium"
                    app:met_errorColor="@color/red"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/fontColorBlack50"
                    app:met_textColorHint="@color/fontColorBlack50"
                    app:met_typeface="@string/font_medium" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_dropdown_form"
                    android:visibility="visible" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.webclues.IPPSOperator.view.MaterialAutoCompleteTextView
                    android:id="@+id/edtCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:focusableInTouchMode="false"
                    android:gravity="start"
                    android:hint="@string/company"
                    android:inputType="none"
                    android:textColor="@color/fontColorBlack"
                    android:textSize="@dimen/text_medium"
                    app:met_errorColor="@color/red"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/fontColorBlack50"
                    app:met_textColorHint="@color/fontColorBlack50"
                    app:met_typeface="@string/font_medium" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_dropdown_form" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/lato_bold"
                android:text="@string/str_register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/already_have_acc"
                    android:textColor="@color/fontColorBlack50"
                    android:textSize="@dimen/text_big" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_semibold"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/login"
                    android:textColor="@color/fontColorBlue"
                    android:textSize="@dimen/text_big" />
            </LinearLayout>


        </LinearLayout>
        <!--    </ScrollView>-->


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>